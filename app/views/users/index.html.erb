<h1>Leaderboard</h1>

<%= search_form_for @q do |f| %>
  <p>
    Player name contains:
    <%= f.text_field :name_cont %>
    <%= f.submit %>
  </p>
<% end %>

<div class="leaderboard">
  <table>
    <tr>
      <th colspan="2">Player</th>
      <th><%= sort_link @q, :wins %></th>
      <th><%= sort_link @q, :losses %></th>
      <th><%= sort_link @q, :draws %></th>
    </tr>
    <%= render @users %>
  </table>
</div>