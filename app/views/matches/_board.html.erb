<div class="board">
  <table>
    <% @match.populated_board.each_slice(3) do |slice| %>
      <tr>
        <% slice.each do |cell| %>
          <td>
            <% if cell == "X" || cell == "O" %>
              <%= cell %>
            <% else %>
              <% if @match.status == "in progress" && @match.next_player?(current_user) %>
                <%= link_to @match.marker(current_user), move_path(@match, cell: cell), method: :post %>
              <% end %>
            <% end %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </table>
</div>